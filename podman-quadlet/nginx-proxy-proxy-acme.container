[Container]
AutoUpdate=registry
ContainerName=nginx-proxy-acme
Environment=DEFAULT_EMAIL=dev@playio.cloud DEBUG=1 RENEW_PRIVATE_KEYS=true "ACME_POST_HOOK=/app/notify_nginx_on_host.sh ACME"
Image=docker.io/nginxproxy/acme-companion:2.6.2
LogDriver=json-file
Pod=nginx-proxy.pod
PodmanArgs=--log-opt 'max-size=2m' --log-opt 'max-file=10'
Volume=/app/proxy/nginx-config/acme/:/etc/acme.sh
Volume=/app/proxy/nginx-config/certs:/etc/nginx/certs
Volume=/app/proxy/nginx-config/html:/usr/share/nginx/html
Volume=/app/proxy/nginx-config/reload:/etc/nginx/reload
Volume=/app/proxy/nginx-config/scripts/notify_nginx_on_host.sh:/app/notify_nginx_on_host.sh
Volume=/run/user/1000/podman/podman.sock:/var/run/docker.sock:ro

[Service]
Restart=always
TimeoutStartSec=900

[Install]
WantedBy=default.target
